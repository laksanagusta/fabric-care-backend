<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addModal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Flow</th>
                        <th>Note</th>
                        <th>Worker</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < task.length; i++) { %>
                        <tr>
                            <td>
                                <%= i+1 %>
                            </td>
                            <td>
                                <%= task[i].taskFlow %>
                            </td>
                            <td>
                                <%= task[i].taskNote %>
                            </td>
                            <td>
                                <%= task[i].user.name %>
                            </td>
                            <td>
                                <%= task[i].taskStatus %>
                            </td>
                            <td>
                                <form action="/task/<%= task[i].id %>?_method=DELETE" method="POST">
                                    <a data-id="<%= task[i].id %>" data-code="<%= task[i].code %>"
                                        data-="<%= task[i].name %>" data-taskflow="<%= task[i].taskflow %>" data-tasknote="<%= task[i].tasknote %>" data-worker="<%= task[i].taskworker %>" data-worker="<%= task[i].user.name %>"
                                        class="btn btn-warning btn-sm button-update"><i class="fas fa-edit"></i></a>
                                    <button type='submit' href="" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>