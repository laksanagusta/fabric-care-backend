<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addModal">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Unit Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <%  for (let i = 0; i < service.length; i++) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= service[i].name %></td>
                        <td><%= service[i].unit %></td>
                        <td><%= service[i].unitPrice %></td>
                        <td>
                            <form action="/service/<%= service[i].id %>?_method=DELETE" method="POST">
                                <a data-id="<%= service[i].id %>" data-name="<%= service[i].name %>" data-unit="<%= service[i].unit %>" data-unitprice="<%= service[i].unitPrice %>" class="btn btn-warning btn-sm button-update"><i class="fas fa-edit"></i></a>
                                <button type='submit' href="" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>

                <% } %>
            </tbody>
        </table>
        </div>
    </div>
</div>