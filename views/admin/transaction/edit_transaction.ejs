<div class="tab-pane fade show active" id="edit-transaction" role="tabpanel2" aria-labelledby="profile-tab">  
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/transaction/<%= transaction.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="text" class="form-control" name="title"   value="<%= transaction.title %>" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="number" class="form-control" name="price" value="<%= transaction.price %>" placeholder="Price" required>
                </div>
                <div class="form-group">
                    <label for="name">Brand</label>
                    <input type="text" class="form-control" name="brand" value="<%= transaction.brand %>" placeholder="Brand" required>
                </div>
                <div class="form-group">
                    <label for="name">Duration</label>
                    <input type="text" class="form-control" name="duration" value="<%= transaction.duration %>" placeholder="Duration" required>
                </div>
                <div class="form-group">
                    <label for="name">Client</label>
                    <input type="text" class="form-control" name="client" value="<%= transaction.client %>" placeholder="Client" required>
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea class="form-control" name="about"><%= transaction.description %></textarea>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Clear</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>